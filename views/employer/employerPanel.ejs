<%- include('../partials/head.ejs') %>

<div class="container">
    <form class="form-horizontal" id="employerProfileForm">
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Name:</label>
            <div class="col-sm-10">
                <input type="text" name="name" id="name" value="<%= employer.name %>" />
            </div>

            <label class="control-label col-sm-2" for="surname">Surname:</label>
            <div class="col-sm-10">
                <input type="text" name="surname" id="surname" value="<%= employer.surname %>" />
            </div>
        </div>
        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </form>
    <div>
        <a href="/employer/manage_offer" class="btn">Stwórz oferte pracy</a>
    </div>
    <div>
        <a href="/skills/create" class="btn">Stwórz umiejętność do rekrutacji</a>
    </div>
</div>

<%- include('../partials/footer.ejs') %>