<%- include('../partials/head.ejs') %>

<div class="container">
    <h3 class="textTitle">Stwórz konto</h3>
    <form id="registerForm" method="put">
        <div class="form-group">   
            <label for="name">Wpisz swoje imię</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Jan" id="name"/>
            </div>
            <label for="surname">Wpisz swoje nazwisko</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Aplikant" id="surname"/>
            </div>
            <label for="email">Wpisz swój E-mail</label>
            <div class="col-sm-10">
                <input type="email" placeholder="janaplikant@gmail.com" id="email"/>
            </div>
            <label for="password">Wpisz hasło</label>
            <div class="col-sm-10">
                <input type="password" placeholder="Hasło" id="password"/>
            </div>
            <label for="repeatPassword">Powtórz swoje hasło</label>
            <div class="col-sm-10">
                <input type="password" placeholder="Powtórz hasło" id="repeatPassword"/>
            </div>
        </div>
        <div class="form-group">  
            <div class="col-sm-offset-2 col-sm-10">
                <button id="registerBtn" type="submit">Zarejstruj się</button>
            </div>
        </div>
        <div class="form-group">
            <a href="/auth/login" id="link" >Masz konto? Zaloguj się</a>
        </div>
    </form>    
</div>

<script src="../../public/js/register.js"></script>
<%- include('../partials/footer.ejs') %>

