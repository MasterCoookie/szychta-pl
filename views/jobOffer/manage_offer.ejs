<%- include('../partials/head.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Dodaj ofertę pracy</h1>
        </div>
    <form class="form-horizontal" id="contactForm">
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Nazwa ogłoszenia:</label>
            <div class="col-sm-10">
                <input type="text" name="name" id="name" />
            </div>

            <label class="control-label col-sm-2" for="description">Opis ogłoszenia:</label>
            <div class="col-sm-10">
                <textarea id="description" name="description" rows="64" cols="64"></textarea>
            </div>

            <label class="control-label col-sm-2" for="mode">Tryb pracy:</label>
            <div class="col-sm-10">
                <input type="checkbox" id="inOffice" name="mode[0]" value=1>
                <label for="mode[0]"> Stacjonarny</label><br>
                <input type="checkbox" id="hybrid" name="mode[1]" value=2>
                <label for="mode[1]"> Hybrydowy</label><br>
                <input type="checkbox" id="remote" name="mode[2]" value=4>
                <label for="mode[2]"> Zdalny</label><br>                
            </div>

            <label class="control-label col-sm-2" for="salary">Wynagrodzenie:</label>
            <div class="col-sm-10">
                <input type="text" name="salary" id="salary" />
            </div>

            <label class="control-label col-sm-2" for="requirements">Wymagania:</label>
            <div class="col-sm-10" id="inputArray">
                <input class="array-input" type="string" id="input0" />
                <button type="button" data-buttonindex="" class="array-remove" id="0">x</button>
            </div>
            <button id="arrayAdd">+</button>

            <label class="control-label col-sm-2" for="location">Lokalizacja:</label>
            <div class="col-sm-10">
                <input type="text" name="location" id="location" />
            </div>

            <label class="control-label col-sm-2" for="industry">Branża:</label>
            <div class="col-sm-10" id="inputArray">
                <input class="array-input" type="string" id="input0" /><button type="button" data-buttonindex="" class="array-remove" id="0">x</button>
            </div>
            <button id="arrayAdd">+</button>

            <label class="control-label col-sm-2" for="additionalQuestions">Dodatkowe pytania:</label>
            <div class="col-sm-10" id="inputArray">
                <input class="array-input" type="string" id="input0" /><button type="button" data-buttonindex="" class="array-remove" id="0">x</button>
            </div>
            <button id="arrayAdd">+</button>

            <label class="control-label col-sm-2" for="keywords">Słowa kluczowe:</label>
            <div class="col-sm-10" id="inputArray">
                <input class="array-input" type="string" id="input0" /><button type="button" data-buttonindex="" class="array-remove" id="0">x</button>
            </div>
            <button id="arrayAdd">+</button>

            <label class="control-label col-sm-2" for="expiryDate">Data wygaśnięcia:</label>
            <div class="col-sm-10">
                <input type="text" name="expiryDate" id="expiryDate" />
            </div>

            <label class="control-label col-sm-2" for="organisation_id">Organizacja:</label>
            <div class="col-sm-10">
                <input type="text" name="organisation_id" id="organisation_id" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Opublikuj" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

<script src="../js/varyingSizeInputArray.js"></script>

<%- include('../partials/footer.ejs') %>
