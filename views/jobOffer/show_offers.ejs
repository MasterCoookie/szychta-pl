<%- include('../partials/head.ejs') %>
<%- include('../partials/navbar.ejs') %>

<
<div class="container bg-white" style="padding-top: 20px;">
    <div class="row d-flex align-items-up justify-content-center h-100">
        <p style="font-size: 30px; font-weight: bolder;">Wyszukaj idealną ofertę</p>
    </div>
        <form class="form-horizontal" id="searchForm" method="get">
                <div class="col mx-auto">
                    <input type="text" placeholder="wpisz słowa kluczowe, które opiszą stanowisko pracy" id="keywords" name="keywords" class="form-control shadow bg-white rounded"/>
                </div>
                <div class="col mx-auto">
                    <input type="text" placeholder="lokalizacja" id="location" name="location" class="form-control shadow bg-white rounded"/>
                </div>
                <div class="col mx-auto">
                    <input type="text" placeholder="tryb pracy" id="mode" name="mode" class="form-control shadow bg-white rounded"/>
                </div>
                <div class="col mx-auto">
                    <input type="text" placeholder="doświadczenie" id="experience" name="experience" class="form-control shadow bg-white rounded"/>
                </div>
                <div class="col-sm-3 mx-auto">
                    <button id="searchBtn" type="submit" class="btn">Wyszukaj</button>
                </div>
        </form>
    <div class="row d-flex align-items-up justify-content-center h-100">
        <div class="table-responsive">
            <table class="table table-hover">
                <tbody>
                    <% jobOffers.forEach((jobOffer, index) => { %>
                    <tr>
                        <td style="text-align: center; vertical-align: middle;">LOGO</td>
                        <td>
                            <div style="font-weight: bolder;"><%= jobOffer.title %></div>
                            <div><%= jobOffer.location %></div>
                            <div>
                                <% jobOffer.mode.forEach((mode, index)=> {%>
                                <% if (mode==0){ %>
                                Stacjonarny
                                <% } else if (mode==1){ %>
                                Hybrydowy
                                <% } else{ %>
                                Zdalny
                                <% }}) %>
                                </div>
                            <div><%= jobOffer.salary %></div>
                        <td style="text-align: center; vertical-align: middle;">
                            <a href="/applicant/view?id=<%=jobOffer._id%>" class="btn">Szczegóły</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>