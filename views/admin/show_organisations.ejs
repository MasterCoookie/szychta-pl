<%- include('../partials/head.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="container bg-white" style="padding-top: 150px;">
    <div class="row d-flex align-items-up justify-content-center h-100">
        <h3 class="col-md-8 mx-auto text-center">Przeglądaj organizacje</h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nazwa</th>
                        <th scope="col">Szczegóły</th>
                        <th scope="col">Usuń</th>
                    </tr>
                </thead>
                <tbody>
                    <% organisations.forEach((organisation, index) => { %>
                    <tr>
                        <td><%= organisation.name %></td>
                        <td>
                            <a href="/admin/manage_organisation?_id=<%=organisation._id%>" class="btn btn-primary">Szczegóły</a>
                        </td>
                        <td>
                            <form action="/admin/delete_organisation" method="post">
                                <input type="hidden" name="_id" value="<%=organisation._id%>">
                                <button type="submit" class="btn btn-danger">Usuń</button>
                            </form>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>